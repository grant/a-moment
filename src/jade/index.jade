extends layout

block css
  link(href='http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext', rel='stylesheet', type='text/css')
  link(rel="stylesheet" href='bin/css/index.css')

block js
  script(src="bin/js/index.js")

block content
  .overlay
    .caption-area
      p.caption A moment
      button.start.button â–º
    .twitter-button
      a.twitter-share-button(href='https://twitter.com/intent/tweet?text=Hello%20world')
        | Tweet
  .underlay
    .viewport
      .clockwall
        - numClocksWide = 15
        - numClocksTall = 9
        - for(var i = 0; i < numClocksWide * numClocksTall; ++i)
          .clock
            .shadow
            svg
              circle.border
              circle.face
              line.hour.hand
              line.minute.hand
              - if (i == Math.floor(numClocksWide * numClocksTall / 2))
                g.second.hand
                  line.line
                  circle.front.dot
                  circle.back.dot
              circle.axle
              - if (i == Math.floor(numClocksWide * numClocksTall / 2))
                circle.hole(cx='50%', cy='50%', r='3.3%')
