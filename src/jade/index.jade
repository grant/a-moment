extends layout

block css
  link(href='http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext', rel='stylesheet', type='text/css')
  link(rel="stylesheet" href='bin/css/index.css')

block js
  script(src="bin/js/index.js")

block content
  .overlay
    .caption-area
      p.caption A moment
      button.start.button â–º
  .underlay
    .viewport
      .clockwall
        - numClocksWide = 15
        - numClocksTall = 9
        - for(var i = 0; i < numClocksWide * numClocksTall; ++i)
          .clock
            .shadow
            svg
              circle.border
              circle.face
              line.hand
              line.hand
              circle.axle
              - if (i == Math.floor(numClocksWide * numClocksTall / 2))
                g.second.hand
                  line
                  circle.start
                  circle.end
                circle.hole(cx='50%', cy='50%', r='3.3%')
