extends layout

block css
  link(rel="stylesheet" href='bin/css/index.css')

block js
  script(src="bin/js/index.js")

block content
  .viewport
    .overlay
      .caption-area
    .underlay
      .clockwall
        - numClocksWide = 15
        - numClocksTall = 9
        - for(var i = 0; i < numClocksWide * numClocksTall; ++i)
          .clock
            .face
            svg.hands
              line.hand(x1='50%', y1='50%', x2='100%', y2='100%')
              line.hand(x1='50%', y1='50%', x2='0%', y2='0%')
              circle.axle(cx='50%', cy='50%', r='4%')
              - if (i == Math.floor(numClocksWide * numClocksTall / 2))
