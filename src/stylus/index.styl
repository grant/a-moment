// Globals
@import './reset'
@import './globals'

// Variables
numClocksWide = 15
numClocksTall = 9
viewportAspectRatio = numClocksWide / numClocksTall

// Styles
html
  overflow hidden

html, body
  width 100%
  height 100%

body
  background themeHomeColorBackground

.viewport
  position absolute
  top 0
  bottom 0
  left 0
  right 0

  margin auto
  width 100vw
  height (100 / viewportAspectRatio) vw
  max-width (viewportAspectRatio * 100) vh
  max-height 100vh

  line-height 0

  .overlay, .underlay
    width 100%
    height 100%
    position absolute

  .clockwall
    width 100%
    height 100%

    &.view-large
      transform scale(5)

    &.view-medium
      transform scale(2)

    .clock
      clockPadding = 10%
      clockBorderWidth = 3%
      handWidth = themeHomeColorClockHandWidth

      position relative
      width (100 / numClocksWide) %
      height (100 / numClocksTall) %
      display inline-block

      svg
        width 100%
        height 100%

      &.hide
        visibility hidden

      .border
        fill themeHomeColorClockBorder

      .face
        fill themeHomeColorClockFace

      .hand
        stroke themeHomeColorCockHandsMain
        stroke-width handWidth

      .axle
        width 100%
        height 100%
        fill themeHomeColorCockHandsMain
        circle
          stroke themeHomeColorCockHandsMain
          fill themeHomeColorClockFace
          stroke-width .5

      .hole
        fill themeHomeColorClockFace
