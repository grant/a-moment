// Globals
@import './reset'
@import './globals'

// Variables
numClocksWide = 15
numClocksTall = 9
viewportAspectRatio = numClocksWide / numClocksTall

// Styles
html
  background-color colorBackground
  overflow hidden

.viewport
  position absolute
  top 0
  bottom 0
  left 0
  right 0

  background pink
  margin auto
  width 100vw
  height (100 / viewportAspectRatio) vw
  max-width (viewportAspectRatio * 100) vh
  max-height 100vh

  line-height 0

  .clock
    position relative
    width (100 / numClocksWide) %
    height (100 / numClocksTall) %
    display inline-block
    padding 0.1%

    .face
      width 100%
      height 100%
      background-color rgba(red, 0.1)
      border-radius 50%

    .hand
      handWidth = 10%
      width 50%
      height handWidth
      margin-top -(handWidth / 2)
      background-color blue
      position absolute
      top 50%
      left 50%
      transform-origin left 50%