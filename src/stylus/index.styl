// Globals
@import './reset'
@import './globals'

// Variables
numClocksWide = 15
numClocksTall = 9
viewportAspectRatio = numClocksWide / numClocksTall

// Styles
html
  overflow hidden

.viewport
  position absolute
  top 0
  bottom 0
  left 0
  right 0

  margin auto
  width 100vw
  height (100 / viewportAspectRatio) vw
  max-width (viewportAspectRatio * 100) vh
  max-height 100vh

  line-height 0

  .overlay, .underlay
    width 100%
    height 100%
    position absolute

  // .overlay
  .underlay
    background-color colorBackground

  .clockwall
    width 100%
    height 100%

    .clock
      clockPadding = 0.1%
      position relative
      width (100 / numClocksWide) %
      height (100 / numClocksTall) %
      display inline-block
      padding clockPadding

      .face
        width 100%
        height 100%
        background-color colorClockFace
        border 2px solid colorClockBorder
        border-radius 50%
        box-shadow 0 1px 0 0 #ddd

      .hand
        handWidth = 6%
        width 50% + (handWidth / 2) - (clockPadding * 2) - 2%
        height handWidth
        background-color colorClockHands
        position absolute
        top 50% - (handWidth / 2)
        left 50% - (handWidth / 2)
        transform-origin (handWidth * (3/4)) 50% 0
        border-radius (handWidth / 2)px 0 0 (handWidth / 2)px