// Globals
@import './reset'

// Variables
numClocksWide = 15
numClocksTall = 9
viewportAspectRatio = numClocksWide / numClocksTall

// Styles

.viewport
  position absolute
  top 0
  bottom 0
  left 0
  right 0

  background blue
  margin auto
  width 100vw
  height (100 / viewportAspectRatio) vw
  max-width (viewportAspectRatio * 100) vh
  max-height 100vh

  .clock
    width (100 / numClocksWide) %
    height (100 / numClocksTall) %
    display inline-block