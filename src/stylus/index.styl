// Globals
@import './reset'
@import './globals'

// Variables
numClocksWide = 15
numClocksTall = 9
viewportAspectRatio = numClocksWide / numClocksTall

// Styles
html
  overflow hidden

html, body
  width 100%
  height 100%

body
  background themeHomeColorBackground

.viewport
  position absolute
  top 0
  bottom 0
  left 0
  right 0

  margin auto
  width 100vw
  height (100 / viewportAspectRatio) vw
  max-width (viewportAspectRatio * 100) vh
  max-height 100vh

  line-height 0

  .overlay, .underlay
    width 100%
    height 100%
    position absolute

  .clockwall
    width 100%
    height 100%

    &.view-large
      transform scale(5)

    &.view-medium
      transform scale(2)

    .clock
      clockPadding = 0.1%
      handWidth = themeHomeColorClockHandWidth

      position relative
      width (100 / numClocksWide) %
      height (100 / numClocksTall) %
      display inline-block
      padding clockPadding

      background-color themeHomeColorClockBorder
      border-radius 50%

      &.hide
        visibility hidden

      .face-area
        width 100%
        height 100%
        padding 3%

        .face
          width 100%
          height 100%
          background-color themeHomeColorClockFace
          border-radius 50%

      .hands
        position absolute
        width 100%
        height 100%
        top 0
        left 0

      .hand
        stroke themeHomeColorCockHandsMain
        stroke-width handWidth

      // The scale of the axle width relative to the hand width
      .axle
        width 100%
        height 100%
        fill themeHomeColorCockHandsMain
        circle
          stroke themeHomeColorCockHandsMain
          fill themeHomeColorClockFace
          stroke-width .5

      .hole
        fill themeHomeColorClockFace